

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/owl.theme.default.css">
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="~/Content/flag-icon.min.css">

</head>
<body style="background-color:azure">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/"><img src="~/Content/img.png" alt="logo" style="width:35px;"></a>

                @Html.ActionLink("Магазин", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right">
                    <li class="info-top">Телефон: 8 800 888 88 88</li>

                    <li>@Html.ActionLink("Магазины", "List", "Shop")</li>


                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Войти", "Login", "Admin", new { returnUrl = @Request.Url.AbsoluteUri }, new { @class = "btn", id = "btn-login" })</li> }
                    else
                    {
                        <li>@Html.ActionLink(User.Identity.Name, "Cab", "Account", new { returnUrl = "Index" }, new { @class = "btn", id = "btn-cab" })</li>
                    }
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")

    @RenderSection("scripts", required: false)
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBAhSm5CyMCkIaL4cTqO9CYW56MZr5Au2Q&callback=initMap"
            async defer></script>
    <script src="~/Scripts/owl.carousel.js"></script>
    <!--<script src="~/Scripts/bootstrap.min.js"></script>-->



    <div class="login-modal" id="login-modal">
        <button class="btn btn-default" id="close-button">Закрыть</button>

    </div>



    <script>
        var link = document.querySelector("#btn-login1")
        var close = document.querySelector("#close-button")
        var popup = document.querySelector(".login-modal");

        link.addEventListener("click", function (evt) {
            evt.preventDefault();
            popup.classList.add("login-modal-show");

        })
        close.addEventListener("click", function (evt) {
            evt.preventDefault();
            popup.classList.remove("login-modal-show");

        })




    </script>
</body>
</html>
