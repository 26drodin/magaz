@model IEnumerable<CodeFirst.Shop>

@{
    ViewBag.Title = "Выбрать магазин";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Выбирите магазин</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>    
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.ActionLink("Выбрать", "AddProduct", new { shop_id=item.ID,prod_id=ViewBag.ProdId},new { @class="btn btn-default"}) 
      
        </td>
    </tr>
}

</table>
