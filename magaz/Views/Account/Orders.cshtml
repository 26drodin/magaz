@model List<CodeFirst.Order>
@{
    ViewBag.Title = "Заказы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Заказы</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Product.Name) <b>Продукта</b> 
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Product.Price)
        </th>
        <th> @Html.DisplayNameFor(model => model[0].Quantity)</th>

        <th> @Html.DisplayNameFor(model => model[0].Shop.Name) <b>Магазина</b></th>
    </tr>


    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Shop.Name)
        </td>       
    </tr>

    }
</table>