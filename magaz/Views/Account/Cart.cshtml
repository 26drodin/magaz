@model IEnumerable<CodeFirst.Product>

@{
    ViewBag.Title = "Корзина";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Корзина</h2>

<p>
    @Html.ActionLink("Очистить корзину", "ClearCart")
</p>
<table class="table">
    <tr>
        <th>
            Товар
        </th>
        <th>
            Цена
        </th>
  <th></th>
      
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
      
        <td>
            @Html.ActionLink("Сделать Заказ","MakeOrder",new {prod_id=item.ID })
        </td>
     
    </tr>
}

</table>
